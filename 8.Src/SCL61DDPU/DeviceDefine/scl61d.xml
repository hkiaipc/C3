<?xml version="1.0" encoding="utf-8" ?>
<devicedefines>
  <!-- HZ SCL-61D -->
  <devicedefine devicetype="scl61d" devicetext="scl61d">
    <operadefine name="read">
      <sendpart>
        <datafield name="f1"
            begin="0"
            length="1"
            converter="Xdgk.Communi.OriginalConverter"
            bytes="2A"/>
        <datafield name="address"
            begin="1"
            length="1"
            converter="Xdgk.Communi.Int8Converter"/>
        <datafield name="f3"
            begin="2"
            length="1"
            converter="Xdgk.Communi.OriginalConverter"
            bytes="4A"/>
      </sendpart>

      <receivepart length="17">
        <datafield name="f1"
            begin="0"
            length="1"
            converter="Xdgk.Communi.OriginalConverter"
            bytes="26"
            matchcheck="true" />

        <datafield name="address"
            begin="1"
            length="1"
            converter="Xdgk.Communi.Int8Converter"/>

        <datafield name="f2"
            begin="2"
            length="1"
            converter="Xdgk.Communi.OriginalConverter"
            bytes="4A"
            matchcheck="true" />

        <datafield name="if"
            begin="3"
            length="4">
            <converter name="Xdgk.Communi.DecimalValueAdapterConverter" hasInner="true">
              <property name="Rate" value="1000"></property>
              <converter name="Xdgk.Communi.BCD4ByteConverter"></converter>
            </converter>
          </datafield>

        <datafield name="sum"
            begin="7"
            length="4">
            <converter name="Xdgk.Communi.DecimalValueAdapterConverter" hasInner="true">
              <property name="Rate" value="10"></property>
              <converter name="Xdgk.Communi.BCD4ByteConverter"></converter>
            </converter>
        </datafield>

        <datafield name="crc"
            begin="102"
            length="3"
            converter="HZ.BytesConverter.AsciiValueConverter" 
            crc="true"/>

        <crcer name="HZ.CRC.AsciiSum"/>
      </receivepart>
    </operadefine>
  </devicedefine>
</devicedefines>
